@{
}

@model Books
<div class="card card-outline-primary m-1 p-1" style="max-width:70%">
    <div class="bg-faded p-1 ">
        <h4>
            @Model.Title
            <span class="badge bg-dark badge-pill badge-primary" style="float:right;">
                <small>@Model.Price.ToString("c")</small>
            </span>
        </h4>
    </div>
    <div class="card-text p-1"><b>Author: </b> @Model.Author </div>
    <div class="card-text p-1"><b>Publisher: </b>@Model.Publisher </div>
    <div class="card-text p-1"><b>Genre: </b> @Model.Category , @Model.Classification </div>
    <div class="card-text p-1"><b>Page Count: </b> @Model.PageCount </div>

    <form method="post" asp-page="/Purchase">
        <input type="hidden" asp-for="@Model.BookId"/> 
        <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
        <span class="card-text">
            <button type="submit" class="btn btn-success btn-sm float-end">Purchase</button>
        </span>

    </form>

</div>
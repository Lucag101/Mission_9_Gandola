<!DOCTYPE html>
<!--basic layout for all other pages to follow-->
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <link href="~/lib/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.0-1/css/all.min.css" integrity="sha512-ZYg+hQvLlM0W9C3P6vTpes5LmJ66G2EsroxDNzwD6qiulckldb29eD9I672HL2X+LH5nRhY1sQqZLJGB+aUUPg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body>
    <div class="bg-light shadow text-dark p-2">
        <div class="container-fluid ">
            <div class="row">
                <div class="col navbar-brand">The Buyable Bookshelf</div>
                <div class="col-6 text-right" style="text-align:right">
                    <vc:cart-summary />
                </div>
            </div>
        </div>
        
        @*<span class="navbar-brand ml-2"><b>The Buyable Bookshelf</b></span>
         <div class="col-6" style="text-align:right">
                        <vc:cart-summary />
                    </div>*@
    </div>
    <div class="row m-1 p-1">
        <div id="categories" class="col-3">
            <vc:types></vc:types>
        </div>
        <div class="col-9">
            @RenderBody()
        </div>
    </div>
    <!--footer with privacy and contact information-->
    <footer class="text-center text-white" style="background-color: #f1f1f1;">
        <div class="text-center text-dark p-3" style="background-color: lightgrey;">
            Mission 10
        </div>
        <!-- Copyright -->
    </footer>

</body>
</html>

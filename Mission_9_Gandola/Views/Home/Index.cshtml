@*@model IQueryable<Books>*@
@model BooksViewModel

<h1>Book Store</h1>
<!--display each book and display information-->

@foreach (Books b in Model.Books)
{
   <partial name="BookSummary" model="b"/>
    
}

<!--display page counts, and include pagination-->
<div page-count="@Model.PageInfo" page-action="Index" page-classes-enabled="true"
          page-class="btn" page-class-normal="btn-outline-dark"
          page-class-selected="btn-primary" class="btn-group pull-right m-1">
</div>


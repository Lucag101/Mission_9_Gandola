@*@model IQueryable<Books>*@
@model BooksViewModel

<h1>Book Store</h1>

@foreach (Books b in Model.Books)
{
    <div class="card card-outline-primary m-1 p-1" style="max-width:70%">
        <div class="bg-faded p-1 " >
            <h4>
                @b.Title
                <span class="badge bg-dark badge-pill badge-primary" style="float:right;">
                    <small>@b.Price.ToString("c")</small>
                </span>
            </h4>
        </div>
        <div class="card-text p-1"><b>Author: </b> @b.Author </div>
        <div class="card-text p-1"><b>Publisher: </b>@b.Publisher </div>
        <div class="card-text p-1"><b>Genre: </b> @b.Category , @b.Classification </div>
        <div class="card-text p-1"><b>Page Count: </b> @b.PageCount </div>
    </div>
    
}

<div page-count="@Model.PageInfo" page-action="Index" page-classes-enabled="true"
          page-class="btn" page-class-normal="btn-outline-dark"
          page-class-selected="btn-primary" class="btn-group pull-right m-1">
</div>


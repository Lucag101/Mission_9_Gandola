@page
@model Mission_9_Gandola.Pages.PurchaseModel
@{
}


<h1></h1>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Quantity</th>
            <th>Cost</th>
            <th>Subtotal</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var i in Model.cart.Items)
            {
        <tr>
            <td>@i.Book.Title</td>
            <td>@i.Book.Author</td>
            <td>@i.Quantity</td>
            <td>@i.Book.Price </td>
            <td>@(i.Quantity * i.Book.Price)</td>
            @* Delete button *@
            <td class="text-center">
                <form method="post" asp-page-handler="remove">
                    <input type="hidden" name="bookId" value="@i.Book.BookId" />
                    <input type="hidden" name="returnUrl" value="@Model.ReturnUrl " />
                    <button type="submit" class="btn btn-sm btn-danger"> Delete </button>
                </form>
            </td>
        </tr>
            }
    </tbody>

    <tfoot>
        <tr>
            <td colspan="3">Total:</td>
            <td>@Model.cart.CalculateTotal().ToString("c")</td>
        </tr>
    </tfoot>

</table>

<div>
    <a class="btn btn-primary" href="@Model.ReturnUrl"> Keep Shopping</a>

    <a class="btn btn-primary" asp-controller="Purchase" asp-action="Checkout"> Checkout</a>
</div>